<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Официальный сайт компании {{ settings.webSite.siteName }} {% endblock %}</title>
    <base href="{{ url('app_energo_show') }}">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('energo/' ~ 'css/bootstrap/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('energo/' ~ 'css/font-awesome/font-awesome.css') }}">
        <link rel="stylesheet" href="{{ asset('energo/' ~ 'css/flexslider.css') }}">
        <link rel="stylesheet" href="{{ asset('energo/' ~ 'css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/common.css') }}">
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block body %}
    {# top bar #}
    {% include 'common/top_wrapper.html.twig' %}
    {# navigation menu #}
    {{ render(controller('AppBundle:energo:menu')) }}

    {% block content %}
    {% endblock %}

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="widget">
                        <h5 class="widgetheading">Our Contact</h5>
                        <address>
                            <strong>Ultimate company Inc</strong><br>
                            JC Main Road, Near Silnile tower<br>
                            Pin-21542 NewYork US.
                        </address>
                        <p>
                            <i class="icon-phone"></i> (123) 456-789 - 1255-12584 <br>
                            <i class="icon-envelope-alt"></i> email@domainname.com
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('energo/js/jquery.js') }}"></script>
    <script src="{{ asset('energo/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
</body>
</html>
