<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}{{ settings.webSite.siteName }} - {% trans %}официальный сайт компании{% endtrans %}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('energo/' ~ 'css/bootstrap/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('energo/' ~ 'css/font-awesome/font-awesome.css') }}">
        <link rel="stylesheet" href="{{ asset('energo/' ~ 'css/animate.css') }}">
        <link rel="stylesheet" href="{{ asset('energo/' ~ 'css/flexslider.css') }}">
        <link rel="stylesheet" href="{{ asset('energo/' ~ 'css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('energo/' ~ 'css/common.css') }}">
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block body %}
    {# top bar #}
    {% include 'common/top_wrapper.html.twig' %}
    {# navigation menu #}
    {{ render(controller('AppBundle:frontend:menu')) }}

    {% block content %}
    {% endblock %}

    {# footer #}
    {% include 'common/footer.html.twig' %}
{% endblock %}
<a href="#" class="scrollup"><i class="fa fa-angle-up active"></i></a>
{% block javascripts %}
    <script src="{{ asset('energo/js/jquery.js') }}"></script>
    <script src="{{ asset('energo/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('energo/js/common.js') }}"></script>
{% endblock %}
</body>
</html>
