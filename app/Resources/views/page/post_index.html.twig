{% extends 'base.html.twig' %}

{% block title %}{{ title }} - {{ settings.webSite.siteName }}{% endblock %}

{% import 'common/helper.html.twig' as helper %}
{% block content %}
    <section id="inner-headline">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="`Title">{{ title }}</h2>
                </div>
            </div>
            <div class="row">
                {{ title|breadcrumbs|raw }}
            </div>
        </div>
    </section>

    <section id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="col-xs-12 section-title secondary">
                        <h3>{{ title|trans }}</h3>
                    </div>
                    <div class="service-v1 margin-bottom-40">
                        <ul class="list-unstyled">
                            {% for post in pagination %}
                                <li><a href="{{ url('post_show', {id: post.id}) }}"><h4>{{ post.title }}</h4></a></li>
                            {% endfor %}
                        </ul>
                    </div>
                    {{ knp_pagination_render(pagination) }}
                </div>
                <div class="bar-block col-lg-3">

                </div>
            </div>
        </div>
    </section>
{% endblock %}