{% import 'common/helper.html.twig' as helper %}

<section id="inner-headline">
    <div class="container">
        <div class="article">
            <div class="col-lg-12">
                <h2 class="pageTitle">{{ page.title|trans }}</h2>
            </div>
        </div>
        <div class="article">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ url('main_page') }}">{% trans %}Домой{% endtrans %}</a>
                </li>
                <li class="breadcrumb-item active">{{ page.title }}</li>
            </ol>
        </div>
    </div>
</section>

<section id="content">
    <div class="container">
        <div class="article">
            <div class="col-lg-8">
                {% for article in pagination %}
                    <div class="col-lg-12">
                        <div class="well">
                            <a href="{{ helper.articleUrl(article) }}"><h4>{{ article.title }}</h4></a>
                            <div class="thumbnail">
                            <a href="{{ helper.articleUrl(article) }}">
                                {% media article.media, 'big' with {'class': 'img-responsive'} %}
                            </a>
                            </div>
                            {{ article.content|raw }}
                            <div class="info-blocks-in">
                                <i>{% trans %}Опубликовано:{% endtrans %} {{ article.createTime|date("d.m.Y") }}</i>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                {{ knp_pagination_render(pagination) }}
            </div>
            <div class="bar-block col-lg-4">
               {{ render(controller('AppBundle:frontend:articleSidebar')) }}
            </div>
        </div>
    </div>
</section>