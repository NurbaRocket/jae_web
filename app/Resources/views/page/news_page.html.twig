<section id="inner-headline">
    <div class="container">
        <div class="article">
            <div class="col-lg-12">
                <h2 class="pageTitle">{{ page.title|trans }}</h2>
            </div>
        </div>
        <div class="article">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ url('app_energo_show') }}">{% trans %}Домой{% endtrans %}</a></li>
                <li class="breadcrumb-item active">{{ page.title }}</li>
            </ol>
        </div>
    </div>
</section>

<section id="content">
    <div class="container">
        <div class="article">
            <div class="col-lg-9">
                {% for article in pagination %}
                <div class="col-lg-12">
                    <div class="well">
                        <a href="{{ url('app_energo_article', {id: article.id}) }}"> <h4>{{ article.title }}</h4></a>
                        <a href="{{ url('app_energo_article', {id: article.id}) }}">
                             <img class="img-responsive" src="{{ asset('uploads/media/' ~ article.image ) }}" alt="">
                        </a>
                        {{ article.content|raw }}
                        <div class="info-blocks-in">
                             <i>{% trans %}Опубликовано:{% endtrans %} {{ article.createTime|date("d.m.Y") }}</i>
                        </div>
                    </div>
                </div>
                {% endfor %}
                {{ knp_pagination_render(pagination) }}
            </div>
            <div class="col-lg-3">
                 <h3>{% trans %}Категории{% endtrans %}</h3>
                 <ul class="list-group">
                     {% for row in categories %}
                          <li class="list-group-item">
                              <a href="{{ url('url_show', {id: row.url}) }}">
                                  {{ row.title }}
                              </a>
                          </li>
                     {% endfor %}
                 </ul>
            </div>
        </div>
    </div>
</section>