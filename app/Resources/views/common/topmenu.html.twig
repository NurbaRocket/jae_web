{% import 'common/helper.html.twig' as helper %}

<header>
    <nav id="second-bar" class="navbar navbar-default navbar-static-top">
        <div class="container">
            {% if pageTree|length %}
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            {% endif %}
        <ul class="nav navbar-nav">
            {% for page in pageTree %}
                <li>
                    {% set children = helper.render_topmenu(page, repository) %}
                    {% if children|length %}
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            {{ page.title }}
                            <span class="caret"></span>
                        </a>
                        {{ children|raw }}
                    {% else %}
                        <a href="{{ page|pageUrl }}">{{ page.title }}</a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
        </div>
    </nav>
</header>