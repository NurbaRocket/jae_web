{% extends 'base.html.twig' %}

{% block content %}
    <section id="call-to-action-2">
        <div class="container">
            <div class="row">
                <div class="col-md-12 aligncenter">
                    <h4>ОАО "ЖАЛАЛАБАТЭЛЕКТРО"</h4>
                    <h1>ОПЫТ. РАЗВИТИЕ. ИННОВАЦИИ.</h1>
                    <p>Только вместе мы добьемся поставленных целей</p>
                    <a href="{{ url('url_show', {url: 'about-jae'}) }}" class="btn btn-lg btn-primary">О КОМПАНИИ</a>
                </div>
            </div>
        </div>
    </section>
    {% include 'energo/skill_home.html.twig' %}
    <section id="content">
        <div class="container">
            <div class="row">
                <div id="news" class="row service-v1 margin-bottom-40">
                    {% for row in articles %}
                        <div class="col-md-4 md-margin-bottom-40">
                            <div class="article-box">
                                <img class="img-responsive" src="{{ asset('uploads/media/' ~ row.image ) }}" alt="">
                                <div class="info-blocks-in">
                                    <p>{% trans %}Опубликовано:{% endtrans %} {{ row.createTime|date("d.m.Y") }}</p>
                                </div>
                                <a href="{{ url('app_energo_article', {id: row.id}) }}"> <h4>{{ row.title|truncate(50) }}</h4></a>
                                {{ row.content|striptags|truncate(200)|raw }}
                            </div>
                            <div class="more">
                                <a href="{{ url('url_show', {url: row.url}) }}">{% trans %}Подробнее...{% endtrans %}</a>
                            </div>
                        </div>
                    {% endfor %}
                    <div class="col-md-12 aligncenter">
                        <a id="all-news" href="{{ url('url_show', {'url': 'janylyktar'}) }}" class="btn btn-default btn-lg">ВСЕ НОВОСТИ</a>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <section id="companies" class="section-grey">
        <div class="container">
            <div class="row">
                <div class="section-title">
                    <h3>{% trans %}Энергокомпании{% endtrans %}</h3>
                </div>
