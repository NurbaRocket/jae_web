                        <div class="content">
                            <a href="http://www.teploseti.kg/"><img class="img-responsive" src="{{ asset('images/teplo.jpg') }}"></a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
                        <div class="content">
                            <a href="http://severelectro.kg/"><img class="img-responsive" src="{{ asset('images/severelectro.jpg') }}"></a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
                        <div class="content">
                            <a href="http://vostokelectro.kg/"><img class="img-responsive" src="{{ asset('images/vostok.jpg') }}"></a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
